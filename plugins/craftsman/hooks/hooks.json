{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "skill",
            "skill": "session-init"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üîç Checking rules before write...'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/post-write-check.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/bias-detector.sh"
          }
        ]
      }
    ]
  }
}
